@model List<Products>




<div class="container">
    <h1 class="text-center my-5">My Favorites</h1>

    <div class="row">
        @if(Model.Count() > 0)
        {

        @foreach (var product in Model)
        {
            
        <div class="col-md-4 mb-4">
            <div class="card">
                   
                    <img style="width: 350px; height: 200px; object-fit: contain;" src=@ImageHelper.GetImageLink(product.Image1, "products") class="card-img-top" alt="Produto" asp-append-version="true">
                
                <div class="card-body">

                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">  @product.Price € </p>
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">View Product</a>
                    <a asp-action="remove" asp-route-id="@product.Id" class="btn btn-danger">Remove</a>
                
                </div>
            </div>
        </div>
        }
        }
        else
        {
            <p> You dont have favoretes yet. </p>
        }
        
    </div>
</div>