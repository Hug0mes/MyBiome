@model MyBiome.Models.Products

@{
    ViewData["Title"] = "Details";
}
<div style=" padding: 40px;
  margin-top: 40px;">


	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<img src=@ImageHelper.GetImageLink(Model.Image1, "products") alt="" class="img-fluid" asp-append-version="true">
				<div class="row mt-3">
					<div class="col-md-4">
						<img src=@ImageHelper.GetImageLink(Model.Image1, "products") alt="" class="img-fluid" asp-append-version="true">
					</div>
					<div class="col-md-4">
						<img src=@ImageHelper.GetImageLink(Model.Image2, "products") alt="" class="img-fluid"  asp-append-version="true" >
					</div>
					<div class="col-md-4">
						<img src=@ImageHelper.GetImageLink(Model.Image3, "products") alt="" class="img-fluid"  asp-append-version="true" >
					</div>
				</div>
			</div>
			<div class="col-md-6 product-info">
				<br/>
				<h2> @Html.DisplayFor(model => model.Name)</h2>
				<h6 class="text-muted">@Html.DisplayFor(model => model.SubCategory.Category.Name) > @Html.DisplayFor(model => model.SubCategory.Name)</h6>
				<h6 class="text-muted"> @Model.Height x @Model.Whidh</h6>
				<p class="description"> @Html.DisplayFor(model => model.Description)</p>
				<h5 class="price"> @Html.DisplayFor(model => model.Price)€ </h5>
				<a class="btn btn-primary btn-sm" asp-controller="Cart" asp-action="Add"  asp-route-id="@Model.Id" >Add to cart</a>
				  
				<button class="btn btn-primary btn-sm" asp-controller="Favorites" asp-action="AddToFavorite" asp-route-id="@Model.Id">Add to favorites</button>
			</div>
		</div>
	</div>

</div>