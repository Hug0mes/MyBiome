@model MyBiome.Models.Products

@{
    ViewData["Title"] = "Details";
}
<div style=" padding: 40px;
  margin-top: 40px;">


	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<img src=@ImageHelper.GetImageLink(Model.Image1, "products") alt="" class="img-fluid" >
				<div class="row mt-3">
					<div class="col-md-4">
						<img src=@ImageHelper.GetImageLink(Model.Image1, "products") alt="" class="img-fluid">
					</div>
					<div class="col-md-4">
						<img src=@ImageHelper.GetImageLink(Model.Image2, "products") alt="" class="img-fluid">
					</div>
					<div class="col-md-4">
						<img src=@ImageHelper.GetImageLink(Model.Image3, "products") alt="" class="img-fluid">
					</div>
				</div>
			</div>
			<div class="col-md-6 product-info">
				<h2> @Html.DisplayFor(model => model.Name)</h2>
				<h3 class="text-muted">@Model. > @Html.DisplayFor(model => model.Name)</h3>
				<p class="description"> @Html.DisplayFor(model => model.Description)</p>
				<p class="price"> @Html.DisplayFor(model => model.Price)€ </p>
				<a class="btn btn-primary btn-sm" asp-controller="Cart" asp-action="Add"  asp-route-id="@Model.Id" >Add to cart</a>
				  <form method="post" action="@Url.Action("Add", "Cart")">
					<input type="hidden" name="productId" asp-route-id="@Model.Id" />
                        <input type="submit" value="Add to cart" />
                    </form>
				<button class="btn btn-success" onclick="buyNow(@Model.Id)">Buy now</button>
			</div>
		</div>
	</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
</div>