@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="row" style="height: 100vh;
 width: 100vw;">
    <div class="col-md-4">
        <div style="padding: 40px; margin-top: 40px; height: 100vh; display: flex; flex-direction: column; justify-content: center; input{border-radius : 20%}">
            <section>
                <form id="account" method="post" style="flex: 1;">
                    <h2>Hello Again!</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" type="text" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                       
                        
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Log in</button>
                    </div>
                    <div>
                        <br />
                       @* <a id="forgot-password" style="color: #334f35;" asp-page="./ForgotPassword">Forgot your password?</a>
                        <br />*@
                        <a asp-page="./Register" style="color: #334f35;" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
@*                        <br />
                        <a id="resend-confirmation" style="color: #334f35;" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>*@
                    </div>
                </form>
              
            </section>
        </div>
    </div>
    <div class="col-md-6 col-md-offset-2" style="background-image: url('../../../../wwwroot/images/coverlogin.jpg');">
      
        <img src="~/images/PlantCover2.jpg" style="width:auto; height:100vh" />
      
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
