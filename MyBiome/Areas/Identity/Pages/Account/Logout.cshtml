@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<style>
    .center {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        padding: 10%;
    }
</style>

<header>

    <div class="container">
        <div class="center">

            <img src="~/images/logoutt.png" alt="Imagem" class="mb-3" width="90" height="auto" />
            <h2>Are you sure you want to leave?</h2>
            <br />
            <div class="btn-group">
    @{
        if (User.Identity.IsAuthenticated)
        {
        

            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-primary text-white">yes</button>
            </form>

            <a asp-asp-controller="dashboard" asp-action="index" class="btn btn-secondary ml-2 text-white">Back</a>
       
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }

            </div>
        </div>
    </div>
</header>
